<% @study_item.errors.full_messages.each do |message|%>
  <div class="alert alert-danger" role="alert"><%= message %></div>
<% end %>

<%= form_for @study_item do |f| %>
  
  <div class="form-group"
    <%= f.label :title, 'Título' %><br/>
    <%= f.text_field :title, class: "form-control" %><br/>
  </div>

  <div class="form-group"
    <%= f.label :Descrição %><br/>
    <%= f.text_area :description, class: "form-control", rows: 4 %><br/>
  </div>

  <div class="col-sm-4"
    <div class="form-group"
      <%= f.label :category_id, 'Categoria' %><br/>
      <%= f.collection_select :category_id, @categorias, :id, :nome, {}, class: "form-control" %>
     <%= link_to 'Nova categoria', new_categorium_path %>
      <br/><br/>
    </div>
  </div>

  <div class="col-sm-3"
    <div class="form-group"
      <%= f.label :deadline, 'Prazo de conclusão' %><br/>
      <%= f.date_field :deadline, class: "form-control" %>
      <br/>
    </div>
  </div>
  
  
  <%= f.submit action_text, class: "btn btn-success" %>
  <div class= "d-grid gap2 d-md-flex justify-content-md-end">
    <%= link_to "Voltar", study_items_all_path, class:"btn btn-primary", 
                          data: {confirm: "Tem certeza que deseja voltar? 
                                    Você perderá todas as alterações."} %>
  </div>
<% end %> 