
<%= form_for @study_item do |f| %>
 
    <%= f.label :title, 'Título' %><br/>
    <%= f.text_field :title, class: "form-control" %><br/><br/>
    <div>
    <%= f.label :Descrição %><br/>
    <%= f.text_area :description, class: "form-control", rows: 4 %><br/><br/>
  

    <%= f.label :Categoria %><br/>
    <%= f.text_field :category, class: "form-control" %><br/><br/>
 
    <%= f.submit "Cadastrar Novo Item", class: "btn btn-success" %>

<% end %> 
