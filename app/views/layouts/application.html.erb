<!DOCTYPE html>
<html>
  <head>
    <title>StudyDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= nav_bar brand: "Study Diary", brand_link: root_url  do %>
      <%= form_tag study_items_search_path, 
                              method: :get,
                              class: "navbar-form navbar-right" do %>
        <div class= "form-group">
          <%= text_field_tag :title, @title , class: "form-control" %>
          <%= button_to "Pesquisar", nil, class: "btn btn-primary" %>
        </div>    
      <% end %>
    <% end %>
    
    <div class="container">
    
    <%= yield %>
    </div>

   

  </body>
</html>
